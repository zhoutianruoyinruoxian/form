{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowUnreachableCode": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src": [
        "./src"
      ],
      "api": [
        "./src/api"
      ],
      "@": [
        "./src/components"
      ],
      "pages": [
        "./src/pages"
      ],
      "variable": [
        "./src/style/_variable.scss"
      ]
    },
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}